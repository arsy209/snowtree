<div class="container inventory-index">
  <h1 class="page-header" id="iventory-title"> Inventory </h1>
  <% if logged_in? %>
  <div class="container">
	  <div class="row">
    <button type="button" id="button-space" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModal">
      Add Inventory
    </button>
  <div class="modal fade" id="myModal"  role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="">
      <div class="">
        <div class="modal-body">
          <%= render partial: "inventories/new_form" %>
        </div>
      </div>
    </div>
  </div>
 </div>
</div>
  <% end %>
   <div class="table-responsive">
    <table class="table table-bordered">
     <thead id= "inventory-header">
       <% if logged_in? %>
       <tr>
         <th>Edit</th>
         <th>Delete</th>
         <th>Image</th>
         <th>Type</th>
         <th>Material Name</th>
         <th>Grade Number</th>
         <th>Form</th>
         <th>Color</th>
         <th>Quantity</th>
       </tr>
     </thead>
     <tbody>
       <% @inventories.each do |inventory| %>
         <tr id="inventory-information">
            <td> <%= link_to 'Edit',  edit_inventory_path(inventory.id) %></td>
            <td> <%= link_to 'Delete',  inventory_path(inventory.id),  method: :delete, data: { confirm: 'Are you sure?' } %></td>
           <% if inventory.photos.length > 0 %>
           <td> <%= image_tag(inventory.photos.first.image.url(:thumb)) %></td>
           <% end %>
           <td><%= inventory.content%></td>

           <td><a data-toggle="modal" data-target="#myModal2"><%= inventory.material_name %></a></td>
           <div class="">
             <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
               <div class="modal-dialog" role="document">
                 <div class="modal-content">
                   <div class="modal-header">
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                   </div>
                   <div class="modal-body">
                     <div class="container" id="tourpackages-carousel">
                       <div class="row">
                         <div class="col-md-18 col-md-6">
                           <div class="thumbnail">
                            <%= image_tag(inventory.photos.first.image.url) %>
                               <div class="caption">
                                 <h4><%= inventory.material_name %></h4>
                                 <p><%= inventory.content%></p>
                                  <p><%= inventory.content%></p>
                                  <p><%= inventory.content%></p>
                                  <p><%= inventory.content%></p>
                             </div>
                           </div>
                         </div>
                       </div>
                     </div>
                   </div>
                 </div>
               </div>
             </div>
           </div>
           <td><%= inventory.grade_number %></td>
           <td><%= inventory.form %></td>
           <td><%= inventory.color %></td>
           <td><%= inventory.quantity %></td>
         </tr>
       </tbody>
       <%end%>
      <%else %>
      <thead id= "inventory-header">
        <tr>
          <th>Image</th>
          <th>Type</th>
          <th>Material Name</th>
          <th>Grade Number</th>
          <th>Form</th>
          <th>Color</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% @inventories.each do |inventory| %>
          <tr id="inventory-information">
            <% if inventory.photos.length > 0 %>
            <td> <%= link_to image_tag(inventory.photos.first.image.url(:thumb)),inventory %></td>
            <% end %>
            <td><%= inventory.content %></td>
            <td><%= inventory.material_name %></td>
            <td><%= inventory.grade_number %></td>
            <td><%= inventory.form %></td>
            <td><%= inventory.color %></td>
            <td><%= inventory.quantity %></td>
          </tr>
        </tbody>
       <%end%>
       <%end%>
   </table>
   <div class="pagination">
      <%= will_paginate renderer: BootstrapPagination::Rails %>
   </div>
 </div>
</div>
