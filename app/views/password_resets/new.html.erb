<div class="container">
  <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 co-md-offset-3 col-sm-8 col-sm-offset-3">
    <div class="password-reset">
      <div class="form-horizontal ">
        <h1>Reset Password</h1>
          <p>Please enter your email address below and then click "Reset Password".</p>
            <%= form_tag password_resets_path do %>
            <%= text_field_tag :email %>
            <input type="submit" name="Submit" value="Reset Password" class=" btn btn-success"/>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
